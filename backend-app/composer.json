{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-sodium": "*",
        "lexik/jwt-authentication-bundle": "^2.8",
        "ramsey/uuid-doctrine": "^1.6",
        "sensio/framework-extra-bundle": "5.*",
        "symfony/asset": "5.*",
        "symfony/console": "5.*",
        "symfony/dotenv": "5.*",
        "symfony/expression-language": "5.*",
        "symfony/flex": "^1.9",
        "symfony/form": "5.*",
        "symfony/framework-bundle": "5.*",
        "symfony/http-client": "5.*",
        "symfony/intl": "5.*",
        "symfony/mailer": "5.*",
        "symfony/monolog-bundle": "^3.5",
        "symfony/notifier": "5.*",
        "symfony/orm-pack": "^2.0",
        "symfony/process": "5.*",
        "symfony/security-bundle": "5.*",
        "symfony/serializer-pack": "1.*",
        "symfony/string": "5.*",
        "symfony/translation": "5.*",
        "symfony/twig-pack": "1.*",
        "symfony/validator": "5.*",
        "symfony/web-link": "5.*",
        "symfony/yaml": "5.*"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "3.*",
        "symfony/debug-pack": "1.*",
        "symfony/maker-bundle": "1.*",
        "symfony/profiler-pack": "1.*",
        "symfony/test-pack": "1.*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "service:update": [
            "composer update -a -o -n --no-scripts --prefer-dist"
        ],
        "service:install": [
            "composer install -a -o -n --no-scripts --prefer-dist",
            "@app:db:setup"
        ],
        "service:fixtures:load": [
            "php bin/console doctrine:fixtures:load -n"
        ],
        "app:db:setup": [
            "sh wait.sh",
            "php bin/console doctrine:database:create --connection=default --if-not-exists --no-interaction",
            "php bin/console doctrine:migrations:migrate --all-or-nothing --allow-no-migration --no-interaction"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.*"
        }
    }
}
