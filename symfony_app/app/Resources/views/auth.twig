{# views/auth.twig #}
{% extends 'base_tmpl.twig' %}
{% block body %}
    <content>
        <div class="container-head">
            <div class="row">
                <p class="h4 col-md-3 col-md-push-4">Authorization</p>
                <span class="glyphicon glyphicon-log-in col-md-9 log-in-span"></span>
            </div>
        </div>
        <div class="container-content">
            <div class="content">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                {% if error|default %}
                    <div class="alert alert-warning alert-dismissible fade in"
                         role="alert"
                    >
                        <button type="button"
                                class="close"
                                data-dismiss="alert"
                                aria-label="Close"
                        >
                            <span aria-hidden="true">&times;</span>
                        </button>
                        {{ error }}
                    </div>
                {% endif %}
                {% if success|default %}
                    <div class="alert alert-success alert-dismissible fade in"
                         role="alert"
                    >
                        <button type="button"
                                class="close"
                                data-dismiss="alert"
                                aria-label="Close"
                        >
                            <span aria-hidden="true">&times;</span>
                        </button>
                        {{ success }}
                    </div>
                {% endif %}
                <div class="form-group">
                    {{
                        form_label(
                            form.userName,
                            null ,
                            {'label_attr': {'class': 'col-md-3 control-label'}}
                        )
                    }}

                    {{ form_errors(form.userName) }}

                    <div class="col-md-8">
                        {{ form_widget(form.userName) }}
                    </div>
                </div>
                <div class="form-group">
                    {{
                        form_label(
                            form.password,
                            null ,
                            {'label_attr': {'class': 'col-md-3 control-label'}}
                        )
                    }}

                    {{ form_errors(form.userName) }}

                    <div class="col-md-8">
                        {{ form_widget(form.password) }}
                    </div>
                </div>

                <span class="register">
                    <a href="{{ path('_register') }}">Register</a>
                </span>
                <div class="form-group">
                    <div class="col-md-5 login-button">
                    {{ form_widget(form.login) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </content>
{% endblock %}
